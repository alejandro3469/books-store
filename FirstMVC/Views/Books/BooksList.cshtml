@model IEnumerable<BooksStore.Business.Models.BookModel>

@{
    ViewBag.Title = "BooksList";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="books_cards_list" style="display: flex;
    flex-direction: row;
    gap: 16px;
    flex-wrap: wrap;">
    @foreach (var item in Model)
    {
        <div class="book_card" style="display: flex;
    flex-direction: column; width: 160px; max-width: 160px; gap: 16px;">
            <div style="width: 160px; max-width: 160px; height: 240px; overflow: hidden; border-radius: 8px;">
